<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ExpandandContractRoi" Height="auto" Width="300" SizeToContent="Height">
    <Border Padding="10">
        <StackPanel>
            <StackPanel Margin="8" Orientation="Horizontal">
                <Label Content="Select ROI:" Margin="2,2,2,2"/>
                <ComboBox Name="SelectROI" Width="100" Margin="2"/>
            </StackPanel>
            <StackPanel Margin="8" Orientation="Horizontal">
                <Label Content="Rounding factor:"/>
            </StackPanel>
            <DockPanel VerticalAlignment="Center" Margin="10">
                <TextBox Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Right" Width="40" />
                <Slider Maximum="2" Value="1" TickPlacement="BottomRight" TickFrequency="0.1" IsSnapToTickEnabled="True" Name="slValue" />
            </DockPanel>
            <DockPanel VerticalAlignment="Center" Margin="10">
                <Button Content="Complete ROI" Margin="2,5" Width="90"
                            Click="ComputeClicked" Height="auto"/>
                <Button Content="Close" Margin="2,5" Width="70" 
                            Click="CloseClicked" Height="auto"/>
            </DockPanel>
        </StackPanel>
    </Border>
</Window> 